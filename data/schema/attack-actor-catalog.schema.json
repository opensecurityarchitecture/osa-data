{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opensecurityarchitecture.org/schema/attack-actor-catalog.schema.json",
  "title": "OSA ATT&CK Threat Actor Catalog",
  "description": "Catalog of MITRE ATT&CK Enterprise threat groups (intrusion-sets) with technique usage. Keyed by group ID.",
  "type": "object",
  "minProperties": 1,

  "patternProperties": {
    "^G[0-9]{4}$": {
      "type": "object",
      "required": ["name", "techniques", "technique_count"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "ATT&CK threat group name (e.g., APT29)"
        },
        "aliases": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Alternative names for this group (e.g., Cozy Bear, The Dukes)"
        },
        "country": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2,
          "pattern": "^[A-Z]{2}$",
          "description": "ISO 3166-1 alpha-2 country code for attributed nation-state (optional, deferred)"
        },
        "sectors": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Target sectors/verticals (e.g., Financial Services, Government, Healthcare)"
        },
        "techniques": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "name", "tactics"],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^T[0-9]{4}(\\.[0-9]{3})?$",
                "description": "ATT&CK technique ID"
              },
              "name": {
                "type": "string",
                "minLength": 1,
                "description": "Technique name"
              },
              "tactics": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                },
                "description": "ATT&CK tactics for this technique"
              }
            }
          },
          "description": "ATT&CK techniques this group is known to use (USES edge)"
        },
        "technique_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of techniques in the techniques array"
        }
      }
    }
  },

  "additionalProperties": false
}
